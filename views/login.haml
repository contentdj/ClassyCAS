- [:notice, :error, :success].each do |key| 
  - unless flash[key].blank? 
    %p{ :class => "flash flash_#{key}" }= flash[key] 
%form{:action => '/login', :method => 'post'}
  %p
    %label{:for => "username"} Username:
    %input#username{:name => "username", :type => "text"}
  %p
    %label{:for => "password"} Password:
    %input#username{:name => "password", :type => "password"}
  %input{:name => "lt", :type => "hidden", :value => @login_ticket.ticket}
  %input{:name => "warn", :type => "hidden"}
  %p
  - if @service_url
    %input{:name => "service", :type => "hidden", :value => @service_url}
  %input{:type => "submit", :value => "Submit", :class => "button"}