!!! Strict
%html
  %head
    %meta{'http-equiv' => 'Content-Type', :content => 'text/html; charset=utf-8'}
    %title ClassyCAS
    %link{:rel=>'stylesheet', :href=>'/stylesheets/base.css', :type => "text/css"}
    %link{:rel=>'stylesheet', :href=>'/stylesheets/drastic-dark.css', :type => "text/css"}
  %body
    #container
      #header
        %h1 <a href="/">Classy CAS</a>
        #user-navigation
          %ul.wat-cf
            <li><a href="#">#{ t("web-app-theme.profile", :default => "Profile") }</a></li>
            <li><a href="#">#{ t("web-app-theme.settings", :default => "Settings") }</a></li>
            <li><a href="/logout" class="logout">#{ t("web-app-theme.logout", :default => "Logout") }</a></li>
        <div id="main-navigation">
        <ul class="wat-cf"></ul>
        </div>
      #wrapper.wat-cf
        .flash
          - flash.each do |type, message|
            .message{:class => type.to_s}
              <p>#{ message }</p>
        #main
          = yield
          #footer
            .block
              <p>Copyright &copy; #{ Time.now.year } Classy CAS.</p>
        #sidebar
          = yield :sidebar